<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bk.firstapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text"
            android:text="My NanoDegree APP"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/movie_btn"
            android:text="POPULAR MOVIES"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/stock_btn"
            android:text="STOCK HAWK"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/build_btn"
            android:text="BUILD IT BIGGER"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/make_btn"
            android:text="MAKE YOUR APP MATERIAL"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/go_btn"
            android:text="GO UBIQUITOUS"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cap_btn"
            android:text="CAPSTONE"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="#2E3D49"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
